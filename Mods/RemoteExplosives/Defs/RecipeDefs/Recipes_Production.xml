	<RecipeDef>
		<defName>ExtractGoldFromSlag</defName>
		<label>extract gold from slag</label>
		<description>Use heat and strong electromagnets to separate useful metal from slag chunks.</description>
		<jobString>Smelting gold from slag.</jobString>
		<workAmount>2000</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ChunkSlagGold</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<Steel>20</Steel>
			<Gold>10</Gold>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ChunkSlagGold</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
