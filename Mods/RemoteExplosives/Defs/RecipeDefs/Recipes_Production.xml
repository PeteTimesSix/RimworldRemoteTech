<RecipeDefs>
	
	<RecipeDef>
		<defName>MakeRemoteBomb</defName>
		<label>make remote explosive</label>
		<description>Craft a deployable remote explosive.</description>
		<jobString>Making deployable remote explosive.</jobString>
		<recipeUsers>
			<li>RemoteExplosivesBench</li>
		</recipeUsers>
		<researchPrerequisite>IEDBomb</researchPrerequisite>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1000</workAmount>
		<targetCountAdjustment>5</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ArtilleryShell</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ArtilleryShell</li>
				<li>Component</li>
				<li>Silver</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RemoteBomb>1</RemoteBomb>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
	
