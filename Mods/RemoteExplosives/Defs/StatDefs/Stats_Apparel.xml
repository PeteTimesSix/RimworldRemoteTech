<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<StatDef>
		<defName>PortableDetonatorRange</defName>
		<label>Detonator range</label>
		<description>How far the signal from a portable detonator will reach. Further is better, until you blow up something you didn't mean to.</description>
		<category>Apparel</category>
		<toStringStyle>Integer</toStringStyle>
		<showIfUndefined>false</showIfUndefined>
		<parts>
			<li Class="StatPart_Quality">
				<factorAwful>0.65</factorAwful>
				<factorShoddy>0.75</factorShoddy>
				<factorPoor>0.9</factorPoor>
				<factorNormal>1</factorNormal>
				<factorGood>1.05</factorGood>
				<factorSuperior>1.1</factorSuperior>
				<factorExcellent>1.15</factorExcellent>
				<factorMasterwork>1.2</factorMasterwork>
				<factorLegendary>1.25</factorLegendary>
			</li>
		</parts>
	</StatDef>
	
	<StatDef>
		<defName>PortableDetonatorNumUses</defName>
		<label>Detonator activations</label>
		<description>How many times a portable detonator can be activated before the battery runs dry.</description>
		<category>Apparel</category>
		<toStringStyle>Integer</toStringStyle>
		<showIfUndefined>false</showIfUndefined>
		<parts>
			<li Class="StatPart_Quality">
				<factorAwful>0.7</factorAwful>
				<factorShoddy>0.8</factorShoddy>
				<factorPoor>0.9</factorPoor>
				<factorNormal>1</factorNormal>
				<factorGood>1.25</factorGood>
				<factorSuperior>1.5</factorSuperior>
				<factorExcellent>2</factorExcellent>
				<factorMasterwork>2.5</factorMasterwork>
				<factorLegendary>3</factorLegendary>
			</li>
		</parts>
	</StatDef>
	
</Defs>