<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
	
	<ThingDef Name="ApparelBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<selectable>True</selectable>
		<pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<SellPriceFactor>0.5</SellPriceFactor>
		</statBases>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li><compClass>CompColorable</compClass></li>
			<li><compClass>CompQuality</compClass></li>
		</comps>
	</ThingDef>
	
	<ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
		<recipeMaker>
			<workSpeedStat>TailoringSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_GasMask</defName>
		<label>gas mask</label>
		<description>A mask that protects the wearer from toxic gasses and other air-borne contaminants.
The filters wear out fairly quickly, so it's recommended to wear this only when necessary.</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		</recipeMaker>
		<graphicData>
			<texPath>GasMask/GasMask</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>3500</WorkToMake>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>160</MarketValue>
			<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
		</statBases>
		<thingCategories>
			<li>Headgear</li>
		</thingCategories>
		<costList>
			<Component>2</Component>
			<Medicine>2</Medicine>
			<Steel>40</Steel>
		</costList>
		<equippedStatOffsets>
			<ShootingAccuracy>-0.05</ShootingAccuracy>
			<SocialImpact>-0.2</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<worngraphicPath>GasMask/GasMask</worngraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<commonality>.8</commonality>
			<tags>
				<li>Outlander</li>
				<li>Military</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags> 
			<wearPerDay>12.5</wearPerDay>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.33,0.33,0.33,1)</only>
				</li>
				<li>
					<weight>5</weight>
					<only>RGBA(1,0.56,0.7,1)</only>
				</li>
				<li>
					<weight>10</weight>
					<only>RGBA(0.9,0.9,0.9,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="ApparelBase">
		<thingClass>RemoteExplosives.PortableDetonator</thingClass>
		<defName>Apparel_PortableDetonator</defName>
		<label>portable remote detonator</label>
		<description>A portable version of the detonator table for triggering remote explosives.
Works only on the white channel, has limited range and runs on a non-rechargeable battery- but hey, you can almost fit it in your pocket. Almost.</description>
		<graphicData>
			<texPath>detonator_portable</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<MaxHitPoints>80</MaxHitPoints>
			<MarketValue>300</MarketValue>
			<PortableDetonatorRange>18</PortableDetonatorRange>
			<PortableDetonatorNumUses>20</PortableDetonatorNumUses>
		</statBases>
		<recipeMaker>
			<workSpeedStat>SmithingSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<recipeUsers>
				<li>RemoteExplosivesBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
			<researchPrerequisite>RemoteDetonator</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Component>2</Component>
			<Silver>8</Silver>
			<Steel>40</Steel>
		</costList>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<layers>
				<li>Accessory</li>
			</layers>
			<commonality>0</commonality>
		</apparel>
	</ThingDef>
	
</ThingDefs>