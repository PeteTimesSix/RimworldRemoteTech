<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="BaseExposive" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <label>unspecified resource</label>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>    
	<soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>10</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>80</MarketValue>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>

  </ThingDef>


  <ThingDef ParentName="BaseExposive">
    <defName>RemoteBomb</defName>
    <label>deployable remote explosive</label>
    <description>Explosive trap with a remote trigger.
Place as a building from the Security menu to use.</description>
    <graphicData>
      <texPath>remote_mine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li>
        <compClass>CompExplosive</compClass>
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="BaseExposive">
    <defName>RemoteFireBomb</defName>
    <label>deployable incendiary remote explosive</label>
    <description>A canister filled with flammable chemicals with a radio trigger.
Place as a building from the Security menu to use.</description>
    <graphicData>
      <texPath>remote_mine_incendiary</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li>
        <compClass>CompExplosive</compClass>
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="BaseExposive">
    <defName>MiningExplosiveComponent</defName>
    <label>mining explosive</label>
    <description>The main part of a remote mining explosive.
Place as a building from the Misc menu to use.</description>
    <graphicData>
      <texPath>explosive_part</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="RemoteExplosives.CompMiningExplosiveProperties">
        <compClass>RemoteExplosives.CompMiningExplosive</compClass>
		<rockChunkChance>0.5</rockChunkChance>
        <miningRadius>2.9</miningRadius>
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.5</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
	<statBases>
      <MarketValue>80</MarketValue>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="BaseExposive">
    <defName>RemoteEmpBomb</defName>
    <label>deployable EMP remote charge</label>
    <description>A single-use electromagnetic pulse generator.
Place as a building from the Security menu to use.</description>
    <graphicData>
      <texPath>mine_emp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <MarketValue>200</MarketValue>
    </statBases>
  </ThingDef>
  
</Defs>