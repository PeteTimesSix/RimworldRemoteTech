<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="BuildingMiscBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactGround</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
	</ThingDef>

	<ThingDef ParentName="BuildingMiscBase">
		<defName>WallFoamBlob</defName>
		<label>chemical foam</label>
		<thingClass>RemoteExplosives.Building_FoamBlob</thingClass>
		<description>Becomes tougher than rock as it solidifies.</description>
		<graphicData>
			<texPath>foam_blob</texPath>
			<graphicClass>RemoteExplosives.Graphic_FoamBlob</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.2,1.2)</drawSize>
			<shadowData>
				<volume>(.8, 1, .8)</volume>
				<offset>(.5, 0, .5)</offset>
			</shadowData>
		</graphicData>
		<drawerType>RealtimeOnly</drawerType>
		<castEdgeShadows>false</castEdgeShadows>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<coversFloor>false</coversFloor>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToMake>50</WorkToMake>
			<MaxHitPoints>30</MaxHitPoints>
			<Flammability>2.0</Flammability>
			<Beauty>-20</Beauty>
		</statBases>
		<size>(1,1)</size>
		<constructEffect>ConstructMetal</constructEffect>
		<passability>PassThroughOnly</passability>
		<pathCost>230</pathCost>
		<pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
		<tickerType>Normal</tickerType>
		<building Class="RemoteExplosives.BuildingProperties_FoamBlob">
			<ticksToHarden>
				<min>750</min>
				<max>850</max>
			</ticksToHarden>
			<ticksBetweenSpreading>
				<min>10</min>
				<max>15</max>
			</ticksBetweenSpreading>
			<hardenedDef>FoamWall</hardenedDef>
		</building>
	</ThingDef>

	<ThingDef ParentName="BuildingMiscBase" Abstract="True" Name="FoamWallBase">
		<thingClass>RemoteExplosives.Building_FoamWall</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>FoamWall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Wall</li>
				<li>Rock</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<blueprintGraphicData>
			<texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>FoamWall/foam_wall_icon</uiIconPath>
		<statBases>
			<MaxHitPoints>8500</MaxHitPoints>
			<WorkToMake>0</WorkToMake>
			<Flammability>0</Flammability>
		</statBases>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>true</blockLight>
		<fillPercent>1</fillPercent>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<holdsRoof>true</holdsRoof>
		<saveCompressible>false</saveCompressible>
		<mineable>true</mineable>
		<building Class="RemoteExplosives.BuildingProperties_FoamWall">
			<isInert>true</isInert>
			<isNaturalRock>false</isNaturalRock>
			<canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
			<deconstructible>false</deconstructible>
			<repairable>false</repairable>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>1.75</multiplier>
			</li>
			<li>
				<damageDef>Bullet</damageDef>
				<multiplier>0.03</multiplier>
			</li>
			<li>
				<damageDef>Mining</damageDef>
				<multiplier>3</multiplier>
			</li>
		</damageMultipliers>
	</ThingDef>
	
	<ThingDef ParentName="FoamWallBase">
		<defName>FoamWall</defName>
		<label>hardened foam wall</label>
		<description>Solidified chemical foam. Extremely tough and non-flammable.</description>
		<graphicData>
			<texPath>FoamWall/foam_wall_Atlas_Smooth</texPath>
		</graphicData>
		<statBases>
			<Beauty>-10</Beauty>
		</statBases>
		<building Class="RemoteExplosives.BuildingProperties_FoamWall">
			<smoothWorkAmount>1000</smoothWorkAmount>
			<smoothVariants>
				<li>FoamWallSmooth</li>
				<li>FoamWallBricks</li>
			</smoothVariants>
		</building>
	</ThingDef>
	
	<ThingDef ParentName="FoamWallBase">
		<defName>FoamWallSmooth</defName>
		<label>smooth foam wall</label>
		<description>Solidified chemical foam. Made a bit more presentable by smoothing the surface.</description>
		<graphicData>
			<texPath>Things/Building/Linked/Wall/Wall_Atlas_Smooth</texPath>
		</graphicData>
		<statBases>
			<Beauty>0</Beauty>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="FoamWallBase">
		<defName>FoamWallBricks</defName>
		<label>chiseled foam wall</label>
		<description>Solidified chemical foam. Made a bit more presentable by carving a brick pattern into the surface.</description>
		<graphicData>
			<texPath>Things/Building/Linked/Wall/Wall_Atlas_Bricks</texPath>
		</graphicData>
		<statBases>
			<Beauty>0</Beauty>
		</statBases>
	</ThingDef>
	
	<ThingDef>
		<defName>CollapsedRoofRocks</defName>
		<graphicData>
			<texPath>Things/Building/Natural/CollapsedRocks</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>None</linkType>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<thingClass>Mineable</thingClass>
		<description>Collapsed rocks, packed tightly enough to hold up a roof.</description>
		<label>collapsed rocks</label>
		<drawerType>MapMeshOnly</drawerType>
		<category>Building</category>
		<selectable>true</selectable>
		<filthLeaving>RockRubble</filthLeaving>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<coversFloor>true</coversFloor>
		<neverMultiSelect>false</neverMultiSelect>
		<saveCompressible>false</saveCompressible>
		<holdsRoof>true</holdsRoof>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>true</blockLight>
		<mineable>true</mineable>
		<rotatable>true</rotatable>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<building>
			<isInert>true</isInert>
			<canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
			<deconstructible>false</deconstructible>
			<isNaturalRock>false</isNaturalRock>
			<claimable>false</claimable>
		</building>
	</ThingDef>
	
	<ThingDef ParentName="BuildingMiscBase">
		<defName>rx_GasVent</defName>
		<label>gas vent</label>
		<thingClass>RemoteExplosives.Building_GasVent</thingClass>
		<description>Pushes gasses from one side to the other when powered. Also equalizes heat like a regular vent when powered.
Tip: switches can be used to toggle vents remotely, as well as in groups.</description>
		<designationCategory>RemoteExplosives</designationCategory>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>GasVent/GasVent</texPath>
			<drawSize>(1,1)</drawSize>
			<shadowData>
				<volume>(1, 1, 1)</volume>
			</shadowData>
			<damageData>
				<rect>(0.1,0.1,1.8,1.8)</rect>
			</damageData>
		</graphicData>
		<costList>
			<Steel>40</Steel>
			<Component>2</Component>
		</costList>
		<constructEffect>ConstructMetal</constructEffect>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>1</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>2000</WorkToBuild>
			<Flammability>0.8</Flammability>
			<Beauty>-3</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<passability>Impassable</passability>
		<building Class="RemoteExplosives.BuildingProperties_GasVent">
			<heatExchangedPerSecond>0.0672</heatExchangedPerSecond>
			<gasPushedPerSecond>1350</gasPushedPerSecond>
			<canPlaceOverWall>true</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>false</startElectricalFires>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<placeWorkers>
			<li>RemoteExplosives.PlaceWorker_GasVent</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<researchPrerequisites>
			<li>RemoteGasVent</li>
		</researchPrerequisites>
	</ThingDef>
	
</Defs>